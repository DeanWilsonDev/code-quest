# .clang-format
BasedOnStyle: Google # Use a predefined style like LLVM, Google, Mozilla, WebKit, or Chromium
IndentWidth: 2       # Number of spaces for indentation
TabWidth: 2          # Number of spaces per tab
UseTab: Never        # Indent using spaces
ColumnLimit: 100     # Maximum line length
AllowShortFunctionsOnASingleLine: None # Inline short functions
AllowShortBlocksOnASingleLine: Never
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false
IncludeBlocks: Preserve # Preserve existing #include block grouping
SortIncludes: false  # Don't sort includes automatically
PointerAlignment: Left # Align pointer with the type (e.g., `int* ptr`)
DerivePointerAlignment: False # Do not derive pointer alignment
AlignAfterOpenBracket: BlockIndent # This avoids aligning parameters after the opening bracket.
AlwaysBreakAfterReturnType: None
BinPackArguments: false
BinPackParameters: false
AllowAllArgumentsOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: true 
BreakBeforeBraces: Custom # Brace style: Allman, Linux, Attach, Stroustrup, etc.
BraceWrapping:
  AfterControlStatement: Never 
  AfterFunction: false
  AfterClass: false
  AfterStruct: false
  AfterEnum: false
  AfterNamespace: false
  BeforeCatch: false
  BeforeElse: false
  BeforeWhile: false
BreakConstructorInitializers: BeforeComma
PenaltyBreakBeforeFirstCallParameter: 1000
PenaltyBreakOpenParenthesis: 1000  # Added this
PackConstructorInitializers: Never
Cpp11BracedListStyle: false
AllowShortLambdasOnASingleLine: None
BreakBeforeBinaryOperators: None
KeepEmptyLinesAtTheStartOfBlocks: false
